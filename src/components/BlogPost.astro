---
import Tag from './Tag.astro';

export interface Props {
  title: string;
  image?: string;
  tags: string[];
}

const { title, image, tags = [] } = Astro.props;
---

<article class="max-w-5xl mx-auto px-3">
    <div class="text-center mb-12">
        <h1 class="text-3xl font-bold">{title}</h1>
    </div>

    <!-- Image -->
    <img class="rounded-xl mx-auto" style="min-width: 80%;" loading="lazy" src={image} alt={title} />

    <!-- Content -->
    <section class="max-w-3xl mx-auto py-6 lg:py-12 content">
    <slot />
    <div class="pt-4 pb-2 pt-10">
        {tags.map(tag => (
          <Tag tag={tag}/>
        ))}
      </div>
    </section>
</article>