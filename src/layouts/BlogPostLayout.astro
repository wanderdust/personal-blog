---
import BlogBaseHead from '../components/BlogBaseHead.astro';
import BlogPost from '../components/BlogPost.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';

export interface Props {
	content: {
		title: string;
		description: string;
    url: string
    postImage: string;
		tags?: string[];
	};
}
const {
	content: { title, description, postImage, tags = [] },
} = Astro.props as Props;
---

<html lang='en'>
  <head>
    <BlogBaseHead title={title} description={description} />
  </head>

  <body>
    <Header />
    <main class="py-12 lg:py-20">
      <BlogPost title={title} image={postImage} tags={tags} >
        <slot />
      </BlogPost>
    </main>
    <Footer />
  </body>
</html>


